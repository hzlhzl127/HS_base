/* pages/productpage/Pdetail.wxss */
page{
	background-color: whitesmoke;
}

.topbox{
	position: relative;
	height: 600rpx;
}

.topimg{
	width: 100%;
	height: 500rpx;
	border-radius: 0rpx 0rpx 50rpx 50rpx;
}

.topname{
	position: absolute;
	bottom: 250rpx;
	left: 20rpx;
	color: white;
	z-index: 3;
	font-size: 80rpx;
	font-weight: bold;
}

.topicon{
	position: absolute;
	left: 20rpx;
	color: white;
	z-index: 3;
	width: 70rpx;
	height: 70rpx;
	top:90rpx
}

.midbox{
	width:95%;
	height: 600rpx;
	margin: 0rpx auto;
}

.midcon{
	width: 85%;
	height: 60%;
	border-radius: 50rpx;
	overflow: auto;
	padding: 50rpx;
	background-color: white;
}
.midtext{
	line-height: 2;
	font-size: 25rpx;
}


.mid-item-list{
	position: absolute;
	height: 400rpx;
	width: 100%;

}

.mid-item{
	position: relative;
	background-color: white;
	margin: 50rpx 20rpx;
	margin-top: 20rpx;
	height: 250rpx;
	width: 250rpx;
	border-radius: 25rpx;
	box-shadow: 1px 1px 4px rgba(0, 0, 0, 0.2);
	display: flex; /* 添加 Flexbox 布局 */
	justify-content: center; /* 在主轴方向居中对齐 */
}

.item-img{
	position: absolute;
	width: 250rpx;
	height: 250rpx;
	border-radius: 25rpx;
	object-fit:cover;
}

.item-name{
	position: absolute;
	bottom: 20rpx;
	font-weight:lighter;
	font-size: 25rpx;
}


.foot{
	margin-top: 500rpx;
	padding: 20rpx;
	width: 100%;
}

.foot-list{
	width: 94%;
}

.foot-item{
	width: 100%;
	height: 500rpx;
	position: relative;
	margin-bottom: 70rpx;
	display: flex;
  justify-content: center; /* 水平居中 */
  align-items: center; /* 垂直居中 */
}

.foot-img{
	border-radius: 25rpx;
	overflow: hidden;
	object-fit: cover;
	width: 900rpx;

}

.new-title{
	font-weight: bold;
	color: #205064;
	font-size: 30rpx;
	margin-bottom: 30rpx;
}
