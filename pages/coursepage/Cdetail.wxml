<!--pages/coursepage/Cdetail.wxml-->
<view class="topbox">
	
<txv-component autoplay="{{false}}" usePoster="{{false}}" vid="{{lines.vid}}" playerid="tvp6" border-radius="20rpx" usePoster="{{true}}"><!-- 里面可以放插槽 --></txv-component>

<view class="topname">{{lines.name}}</view>
</view>

<view class="midbox">
	<view class="midcon">
		<view class="midtext">{{lines.content}}</view>
	</view>
</view>

<view class="{{back}}" bindtouchend="collect" bindtouchstart="checked">
  <image class="back-to-top-icon" src="/image/爱心.png"></image>
</view>



