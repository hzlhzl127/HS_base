.tabarBox{
	height: 100rpx;
	width: 100%;
	position: fixed;
	bottom: 0rpx;
	display: flex;
  justify-content: center;
}

.tabar {
  display: flex;
  justify-content: center; /* 水平居中对齐 */
  height: 100rpx;
  width: 500rpx;
  background-color: #dfe4e79f;
  border-radius: 100rpx 100rpx 0 0;
}

.tabar-icon{
	height: 60rpx;
	width: 60rpx;
	margin: 20rpx 80rpx;
}



page {
	background-color:white;
	background: linear-gradient(to bottom, #d7e8f8,white);
	background-position: center center;
	background-size:cover;
	opacity: 0.95;
}

.toproot{
	display: flex;
	align-items: center;
	margin-top: 200rpx;
	margin-bottom: 80rpx;
}

.topimg{
	width: 200rpx;
	height: 200rpx;
	border-radius: 50%;
	margin: 40rpx;
	box-shadow:1rpx 1rpx 50rpx rgba(255, 255, 255, 0.4);
}

.top_name{
	margin-left: 30rpx;
	font-size: 50rpx;
	color:white;
	font-weight: lighter;
	padding: 5rpx 10rpx;
}

.top_login{
	margin-left: 30rpx;
	font-size: 40rpx;
	color:white;
	font-weight: lighter;
	padding: 5rpx 20rpx;
	background-color: #70a2ac;
	border-radius: 25rpx;
}


.login_out{
	width: 130rpx;
	justify-content: center;
	padding-left: 20rpx;
	margin-left: 40rpx;
	font-size: 25rpx;
	margin-top: 20rpx;
	color:tomato;
	background-color: whitesmoke;
	border-radius: 25rpx;
}

.item{
	padding: 5rpx;
	display: flex;
	align-items: center;
	height: 90rpx;
	margin-bottom: 40rpx;
	font-weight: lighter;
	background-color: white;
}


.right_arrow{
	height: 40rpx;
	width: 40rpx;
	margin-left: auto;
	margin-right: 20rpx;
}

.item_name{
	font-size: 30rpx;
	margin-left: 40rpx;
}


.box{
	height:1000rpx;
	padding-top: 100rpx;
	border-radius: 50rpx 50rpx 0rpx 0rpx;
	background-color: white;
	margin-bottom: 0rpx;

}

.check-item{
	padding: 5rpx;
	display: flex;
	align-items: center;
	height: 90rpx;
	margin-bottom: 40rpx;
	border-radius: 15rpx;
	box-shadow: 4px 4px 10px rgba(0, 0, 0, 0.4);
	font-weight: lighter;
	color: #597594;

}

